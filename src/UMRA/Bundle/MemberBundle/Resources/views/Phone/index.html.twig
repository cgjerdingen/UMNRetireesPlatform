{% extends 'UMRAMemberBundle::nav.html.twig' %}

{% block modulecontent -%}
    <h1>Phone list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Phnumber</th>
                <th>Phtype</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('UMRA_Phone_show', { 'id': entity.id }) }}">{{ entity.phnumber }}</a></td>
                <td>{{ entity.phtype }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('UMRA_Phone_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('UMRA_Phone_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('UMRA_Phone_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
