{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Email</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Householdid</th>
                <td>{{ entity.householdID }}</td>
            </tr>
            <tr>
                <th>Personid</th>
                <td>{{ entity.personID }}</td>
            </tr>
            <tr>
                <th>Prisec</th>
                <td>{{ entity.priSec }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('email') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('email_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
