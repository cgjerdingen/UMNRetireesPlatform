{% extends 'UMRAMemberBundle::nav.html.twig' %}

{% block modulecontent -%}
    <h1>Role list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Fromdate</th>
                <th>Todate</th>
                <th>Description</th>
                <th>Notes</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('UMRA_Role_show', { 'id': entity.id }) }}">{{ entity.fromdate|date('Y-m-d H:i:s') }}</a></td>
                <td>{% if entity.todate %}{{ entity.todate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.notes }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('UMRA_Role_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('UMRA_Role_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('UMRA_Role_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
