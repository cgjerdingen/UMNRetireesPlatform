<h4 class="text-center">
    {{ entity.fullname }}
    {% if entity.id == app.user.id or entity.household.id == app.user.household.id or is_granted('ROLE_CAN_EDIT_OTHER_PERSON') %}
    <a class="btn btn-primary text-left"
       href="{{ path('UMRA_Person_edit', {'id': entity.id }) }}">
        <span class="fa fa-edit"></span> Edit
    </a>
    {% endif %}
</h4>

<dl class="dl-horizontal">
    <dt>Nickname</dt>
    <dd>{{ entity.nickname }}</dd>

    <dt>Name Tag</dt>
    <dd>{{ entity.nametagname }}</dd>

    <dt>Member Since</dt>
    <dd>
        {% if entity.membersince is empty %}
            N/A
        {% else %}
            {{ entity.membersince|date('m/d/Y') }}
        {% endif %}
    </dd>

    <dt>Membership Status</dt>
    <dd>
        {% if entity.activenow %}
            <span class="label label-success">Active</span>
        {% else %}
            <span class="label label-danger">Inactive</span>
        {% endif %}
    </dd>

    <dt>Newsletter Preference</dt>
    <dd>
        {% if entity.newsPref == 'postal' %}
            Postal
        {% elseif entity.newsPref == 'email' %}
            Email
        {% elseif entity.newsPref == 'both' %}
            Postal &amp; Email
        {% else %}
            Does not receive newsletter
        {% endif %}
    </dd>
</dl>
