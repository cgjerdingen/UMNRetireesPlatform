{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{{ entity.luncheonDate|date('F Y') }} Luncheon</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name Tag Name</th>
                <th>Transaction</th>
            </tr>
        </thead>
        <tbody>
            {% for attendee in entity.attendees %}
            <tr>
                <td>{{ attendee.nametagname }}</td>
                <td></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul class="list-inline">
        <li>
            <a href="{{ path('UMRA_Luncheon') }}" class="btn btn-default">
                Back to Luncheons
            </a>
        </li>
    </ul>
{% endblock %}
