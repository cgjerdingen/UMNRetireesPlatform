{% extends 'UMRAMemberBundle::nav.html.twig' %}

{% block modulecontent -%}

    <div class="page-header">
        <h1>Households</h1>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Postal Name</th>
                <th>ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('UMRA_Household_show', { 'id': entity.id }) }}">{{ entity.lastname }}</a></td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.postalname }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul class="list-inline">
                    <li>
                        <a class="btn btn-primary btn-sm" href="{{ path('UMRA_Household_show', { 'id': entity.id }) }}">View</a>
                    </li>
                    <li>
                        <a class="btn btn-warning btn-sm" href="{{ path('UMRA_Household_edit', { 'id': entity.id }) }}">Edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('UMRA_Household_new') }}">
        <span class="glyphicon glyphicon-plus"></span> Add
    </a>
{% endblock %}
