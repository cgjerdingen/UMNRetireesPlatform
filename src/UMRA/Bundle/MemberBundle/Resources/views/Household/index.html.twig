{% extends 'UMRAMemberBundle::nav.html.twig' %}

{% block modulecontent -%}
    <h3>Households</h3>

    <form action="{{ path('UMRA_Household') }}" method="GET" class="row">
        <div class="col-sm-3">
            <div class="form-group">
                <label class="control-label">Find by Name</label>
                <input class="form-control" type="search" name="name" value="{{ name }}" />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="control-label">
                    Current UMRA Member?
                </label>
                <div>
                    <label class="radio-inline">
                        <input type="radio" name="active" value="1"> Yes
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="active" value="0"> No
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg">
                <span class="fa fa-search"></span>
                Search
            </button>
        </div>
    </form>

    <hr />

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Postal Name</th>
                <th>ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('UMRA_Household_show', { 'id': entity.id }) }}">{{ entity.lastname }}</a></td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.postalname }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul class="list-inline">
                    <li>
                        <a class="btn btn-primary btn-sm" href="{{ path('UMRA_Household_show', { 'id': entity.id }) }}">View</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('UMRA_Household_new') }}">
        <span class="glyphicon glyphicon-plus"></span> Add
    </a>

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>
{% endblock %}
