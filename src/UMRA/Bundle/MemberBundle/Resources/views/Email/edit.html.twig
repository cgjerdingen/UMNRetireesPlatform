{% extends 'UMRAMemberBundle::nav.html.twig' %}

{% block modulecontent -%}
     <div class="page-header">
        <h1>Editing email "{{ entity.email }}"
            {% if entity.type == 'personal' %}
            <span class="label label-primary">Personal</span>
            {% elseif entity.type == 'work' %}
            <span class="label label-success">Work</span>
            {% elseif entity.type == 'shared' %}
            <span class="label label-danger">Shared</span>
            {% else %}
            <span class="label label-default">Other</span>
            {% endif %}
        </h1>
        <h2 class="text-muted">Owned by:
            <small>
                {% if entity.household %}
                <a href="{{ path('UMRA_Household_show', { 'id': entity.household.id }) }}">
                    Household of {{ entity.household.postalName }}
                </a>
                {% else %}
                <a href="{{ path('UMRA_Person_show', { 'id': entity.person.id }) }}">
                    {{ entity.person.firstName }} {{ entity.person.lastName }}
                </a>
                {% endif %}
            </small>
        </h2>
    </div>

    {{ form(edit_form) }}

    <ul class="list-inline">
        <li>
            <a class="btn btn-default" href="{{ path('UMRA_Household_show', { 'id' : householdId }) }}">
                Back to household
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
