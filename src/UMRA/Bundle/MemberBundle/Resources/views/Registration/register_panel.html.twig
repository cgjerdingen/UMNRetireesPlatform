{% if register_eligible %}
    {{ form_start(form, { action: path('UMRA_register') }) }}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Register</h3>
        </div>
        <div class="panel-body">
            {{ form_errors(form) }}

            <div class="form-group">
                <label class="control-label">Membership Type</label>
                <div>
                    {% do form.membershipType.setRendered %}
                    <div class="radio-inline">
                        <label>
                            <input type="radio" name="register[membershipType]" value="10" /> Single ($10)
                        </label>
                    </div>
                    <div class="radio-inline">
                        <label>
                            <input type="radio" name="register[membershipType]" value="15" /> Couple ($15)
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Pre-purchase First 7 Luncheons</label>
                <div>
                    {% do form.luncheonPreorder.setRendered %}
                    <div class="radio-inline">
                        <label>
                            <input type="radio" name="register[luncheonPreorder]" value="single" /> Single ($112)
                        </label>
                    </div>
                    <div class="radio-inline">
                        <label>
                            <input type="radio" name="register[luncheonPreorder]" value="couple" /> Couple ($224)
                        </label>
                    </div>
                    <div class="radio-inline">
                        <label>
                            <input type="radio" name="register[luncheonPreorder]" value="none" /> Do not pre-purchase
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Please send me discount parking coupons with my membership card</label>
                <div>
                    {% do form.parkingCoupon.setRendered %}
                    <div class="radio-inline">
                        <label>
                            <input type="radio" name="register[parkingCoupon]" value="0" /> 0
                        </label>
                    </div>
                    <div class="radio-inline">
                        <label>
                            <input type="radio" name="register[parkingCoupon]" value="1" /> 1
                        </label>
                    </div>
                    <div class="radio-inline">
                        <label>
                            <input type="radio" name="register[parkingCoupon]" value="3" /> 3
                        </label>
                    </div>
                    <div class="radio-inline">
                        <label>
                            <input type="radio" name="register[parkingCoupon]" value="6" /> 6
                        </label>
                    </div>
                    <div class="radio-inline">
                        <label>
                            <input type="radio" name="register[parkingCoupon]" value="9" /> 9
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            {{ form_widget(form.payCreditCard) }}
            {{ form_widget(form.payCheck) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endif %}

