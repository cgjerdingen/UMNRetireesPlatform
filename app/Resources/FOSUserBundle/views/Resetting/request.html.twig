{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
{% trans_default_domain 'FOSUserBundle' %}
<div class="row">
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request col-sm-6">
        <div class="form-group">
            {% if invalid_username is defined %}
                <p class="text-danger">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
            {% endif %}
            <label for="username" class="control-label">Email Address</label>
            <input type="text" id="username" name="username" required="required" class="form-control" placeholder="e.g. examp001@umn.edu" />
        </div>
        <div class="form-group">
            <input type="submit" value="{{ 'resetting.request.submit'|trans }}" class="btn btn-primary" />
        </div>
    </form>
</div>
{% endblock fos_user_content %}
